@{
}

@model List<CandidateViewModel>
<link rel="stylesheet" href="~/css/candidate_eval.css" asp-append-version="true" />
<div id="bg">
    <img src="../Images/dem2.jpg" alt="">
</div>
<div class="interviewer_table">
    <div class="container">

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Candidate Name</th>
                    <th>Interview Schedule</th>
                    <th>Job Name</th>
                </tr>
            </thead>
            <tbody>
                @if (Model!= null && Model.Count > 0)
                {
                    @foreach (var role in Model)
                    {
                        <tr>
                            <td>@role.CandidateName</td>
                            <td>@role.InterviewSchedule</td>
                            <td>@role.JobName</td>
                        </tr>
                    }
                }
                else
                {
                <td colspan="3">No Candidates created</td>
            }
                </tbody>
            </table>


    </div>
</div>

@model CriteriaViewModel
<div class="row">
    <div class="col-md-12">
<div class="custom_table table-responsive">
         <table id="tbl_eval" class="table table-bordered">
             <thead>
               <tr>
                  <th>Role</th>
                  <th>SubCriteria</th>
                  <th>Description</th>
                  <th>Delete</th>
               </tr>
            </thead>
            <tbody>
                @if(Model.CriteriasCreated!=null && Model.CriteriasCreated.Count > 0)
                    {
                        @foreach(var role in Model.CriteriasCreated)
                        {
                            <tr>
                            <td>@role.JobName</td>
                            <td>@role.CriteriaName</td>
                            <td>@role.CriteriaDescription</td>
                            <td>@Html.ActionLink("Delete", "DeleteItem", "EvaluationCriteria", new { argID = role.SubCriteriaID })</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <td colspan = "4">No subcriterias created</td>
                    }
             </tbody>
         </table>
      </div>

      </div>
      </div>

      @section scripts
{

<script type="text/javascript">

    $(document).ready(function(){
        initialiseDataTable();
    })
    function initialiseDataTable() {
        $('#tbl_eval').DataTable({
            responsive: true
        });
}
</script>
}
@{
    var controllerName = this.ViewContext.RouteData.Values["controller"].ToString();
    string layout = "";
    if (controllerName == "Homepage")
    {
        layout = "_LayoutHome";
    }
    else
    {
        layout = "_Layout";
    }
    Layout = layout;
}

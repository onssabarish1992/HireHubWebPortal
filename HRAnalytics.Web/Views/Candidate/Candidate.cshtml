	<body>
<div class="c_eval">
   <div class="col-md-12">
      <h2>Candidate Evaluation</h2>
   </div>
   <div class="col-md-12">
      <div class="candidate_evaluation">
         <div class="form-group">
            <label class="control-label" for="c_name">Candidate Name:</label>
            <p id="cname"></p>
         </div>
         <div class="form-group">
            <label class="control-label" for="role">Role:</label>
            <p id="role"></p>
         </div>
      </div>
      <div class="custom_table">
         <form id="candidate_pr" class="form-horizontal" action="/" method="POST" onsubmit="submitForm();return false">
            <table class="table table-bordered">
               <thead>
                  <tr>
                     <th>Evaluation Criteria</th>
                     <th>Description</th>
                     <th>Rating</th>
                     <th>Comments</th>
                  </tr>
               </thead>
               <tbody>
                  <tr>
                     <td id="teamsk"></td>
                     <td id="desc"></td>
                     <td>
<select id="ratings" required class="form-control"></select>   
                     </td>
                     <td>
                        <textarea name="" id="comment" rows="5" class="form-control" required></textarea>
                     </td>
                  </tr>

               </tbody>

            </table>
							                 <div class="sub-btn">
                  <button type="submit" id='submitButton' class="btn btn-primary">Save</button>
               </div>
         </form>
      </div>
   </div>   
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script> 

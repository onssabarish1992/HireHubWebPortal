    <script>
const txt = '{"name":"Ashima Sharma", "role":"Project Manager", "evaluation_criteria":"Team Skills", "desc":"Perfect fit for the job position", "comment": "This is a dummy comment" }'
const obj = JSON.parse(txt);
document.getElementById("cname").innerHTML = obj.name;
document.getElementById("role").innerHTML = obj.role;
document.getElementById("teamsk").innerHTML = obj.evaluation_criteria;
document.getElementById("desc").innerHTML = obj.desc;
document.getElementById("comment").innerHTML = obj.comment;

  var jsonData = {
      "Table": [{
          "ratingid": "0",
          "rating": "1"
      }, {
          "ratingid": "1",
          "rating": "2"
      }, {
          "ratingid": "2",
          "rating": "3"
      }, {
          "ratingid": "3",
          "rating": "4"
      }, {
          "ratingid": "4",
          "rating": "5"
      }]
  };
 
     $(document).ready(function () {
         var listItems = '<option selected="selected" value="0">- Select Rating -</option>';
 
      for (var i = 0; i < jsonData.Table.length; i++) {
             listItems += "<option value='" + jsonData.Table[i].ratingid + "'>" + jsonData.Table[i].rating + "</option>";
         }
 
         $("#ratings").html(listItems);
     });
</script>
</body>
